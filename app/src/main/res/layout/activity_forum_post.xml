<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ui.forumpost.ForumPostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Cộng đồng NoteBaby"
                app:titleTextColor="@android:color/black"
                app:menu="@menu/drawer_nav_menu"/>

        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Kết nối với hàng nghìn bậc phụ huynh, chia sẻ kinh nghiệm và nhận tư vấn từ chuyên gia"
            android:textAlignment="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="8dp"
            android:rowCount="2">

            <com.google.android.material.card.MaterialCardView
                style="@style/StatCard"/>
            <com.google.android.material.card.MaterialCardView
                style="@style/StatCard"/>
            <com.google.android.material.card.MaterialCardView
                style="@style/StatCard">
                <LinearLayout style="@style/StatCardContent">
                    <TextView style="@style/StatCardValue" android:text="1"/>
                    <TextView style="@style/StatCardLabel" android:text="Chuyên gia"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                style="@style/StatCard">
                <LinearLayout style="@style/StatCardContent">
                    <TextView style="@style/StatCardValue" android:text="3"/>
                    <TextView style="@style/StatCardLabel" android:text="Sự kiện"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </GridLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="scrollable">

            <com.google.android.material.tabs.TabItem
                android:text="Thảo luận" />
            <com.google.android.material.tabs.TabItem
                android:text="Nhóm" />
            <com.google.android.material.tabs.TabItem
                android:text="Sự kiện" />
            <com.google.android.material.tabs.TabItem
                android:text="Chuyên gia" />
            <com.google.android.material.tabs.TabItem
                android:text="Hỏi đáp" />
        </com.google.android.material.tabs.TabLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ Tạo bài viết mới"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/newPostTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@null"
                    android:hint="Nhập tiêu đề bài viết..." />

                <EditText
                    android:id="@+id/newPostContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="Bạn muốn chia sẻ điều gì với cộng đồng?"
                    android:minLines="3" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/attachImageButton"
                        style="?attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:drawableStart="@android:drawable/ic_menu_gallery"
                        android:text="Ảnh" />

                    <Button
                        android:id="@+id/postButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="Đăng bài" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:padding="8dp" />

    </LinearLayout>
</ScrollView>
